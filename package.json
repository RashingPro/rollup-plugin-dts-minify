{
  "name": "rollup-plugin-dts-minify",
  "description": "Small Rollup plugin that runs `dts-minify` on `.d.ts` declarations",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@10.20.0",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "format": "prettier . --write",
    "lint": "eslint . --fix",
    "cleanOutDir": "rimraf dist",
    "build": "npm run cleanOutDir && rollup --config rollup.config.ts --configPlugin typescript",
    "build+format": "npm run format && npm run build",
    "build+format+lint": "npm run format && npm run lint && npm run build",
    "knip": "knip"
  },
  "files": [
    "package.json",
    "dist",
    "README.md"
  ],
  "dependencies": {
    "dts-minify": "^0.3.3",
    "rollup": "^4.52.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@eslint/js": "^9.38.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.9.2",
    "dts-minify": "^0.3.3",
    "eslint": "^9.38.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "knip": "^5.66.4",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prettier-plugin-unused-imports-configurable": "^1.15.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.5",
    "rollup-plugin-dts": "^6.2.3",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
